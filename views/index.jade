extends layout

block content
    div(ng-controller='FootballController')
        h1= title
        p Welcome to #{title}
        input(type="text" ng-model="yourName" placeholder="Enter a name here")
        h2 Hello {{yourName}}

        ul
            li(ng-repeat="todo in todos")
                input(type="checkbox" ng-model="todo.done")
                {{todo.text}}

    script(src='javascripts/football.js')
