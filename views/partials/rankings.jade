div
    h1= "Staða"

    div(ui-calendar="uiConfig.calendar" class="span8 calendar" ng-model="eventSources" id="myCalendar")

    table
        tbody
            tr
                th#tsaeti Sæti
                th#tlid Lið
                th
                th#tmarkatala Markatala
                th#tmarkamunur Munur
                th#tstig Stig
            tr(ng-repeat="rank in rankings" ng-click="toggleTeam(rank.team)" ng-class="{selected: rank.team === selectedTeam}" ng-class-odd="'odd'")
                td#saeti {{rank.rank}}    
                td#mynd 
                    img(class="logo" src="{{rank.crestURI}}") 
                td#lid {{rank.team}}
                td#markatala {{rank.goals}} : {{rank.goalsAgainst}}
                td#markamunur {{rank.goalDifference}}
                td#stig {{rank.points}}

    h1= "Síðustu leikir"
    div(ng-repeat="fixture in prevFixtures | filter: selectedTeam | orderBy:'date':true")
        {{fixture.date | date:'dd/MM/yyyy kl. HH:mm'}}
        img(class="logo" src="{{logos[fixture.homeTeam]}}")
        {{fixture.homeTeam}} {{fixture.goalsHomeTeam}} - {{fixture.goalsAwayTeam}} {{fixture.awayTeam}}
        img(class="logo" src="{{logos[fixture.awayTeam]}}")

    h1= "Næstu leikir"
    div(ng-repeat="fixture in nextFixtures | filter: selectedTeam")
        {{fixture.date | date:'dd/MM/yyyy kl. HH:mm'}} 
        img(class="logo" src="{{logos[fixture.homeTeam]}}")
        {{fixture.homeTeam}} - {{fixture.awayTeam}}
        img(class="logo" src="{{logos[fixture.awayTeam]}}")